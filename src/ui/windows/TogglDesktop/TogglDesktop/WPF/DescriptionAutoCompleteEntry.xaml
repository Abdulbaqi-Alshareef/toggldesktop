<UserControl x:Class="TogglDesktop.WPF.DescriptionAutoCompleteEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toggl="clr-namespace:TogglDesktop.WPF"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance {x:Type toggl:DescriptionAutoCompleteEntrySample}, IsDesignTimeCreatable=True}"
             Height="30"
             Style="{toggl:Resources ResourceKey=DescriptionAutoCompleteItem}">

    <UserControl.Background>
        <SolidColorBrush Color="{Binding BackgroundColor}"></SolidColorBrush>
    </UserControl.Background>

    <TextBlock VerticalAlignment="Center" Text="{Binding Description}"
                Margin="10, 0, 10, 0"
                />
</UserControl>
