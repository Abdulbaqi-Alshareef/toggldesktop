<UserControl x:Class="TogglDesktop.WPF.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toggl="clr-namespace:TogglDesktop.WPF"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance {x:Type toggl:TagSample}, IsDesignTimeCreatable=True}" Margin="0, 3, 6, 3"
             Style="{toggl:Resources ResourceKey=Tag}">

    <Border>
        <Grid>
            <TextBlock Text="{Binding Text}"/>
            <Button Click="remove_OnClick" />
        </Grid>
    </Border>
</UserControl>
