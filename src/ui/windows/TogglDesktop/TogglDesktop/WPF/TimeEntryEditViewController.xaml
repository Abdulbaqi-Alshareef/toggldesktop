<UserControl x:Class="TogglDesktop.WPF.TimeEntryEditViewController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <Style TargetType="Grid" x:Key="MainGridStyle">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/TogglDesktop;component/Resources/timerLightBg.png"
                                AlignmentX="Left" AlignmentY="Top" TileMode="Tile" Stretch="None"
                                Viewport="0, 0, 634, 782" ViewportUnits="Absolute"/>
                </Setter.Value>
            </Setter>

            <Style.Resources>
                <Style TargetType="Control" x:Key="ControlBaseStyle">
                    <Setter Property="FontFamily" Value="/TogglDesktop;component/Resources/Fonts/#Roboto" />
                    <Setter Property="FontSize" Value="13.3" />
                    <Setter Property="Foreground" Value="#252525"/>
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
                <Style TargetType="TextBox" BasedOn="{StaticResource ControlBaseStyle}">
                    <Setter Property="Padding" Value="5, 0, 0, 0"/>
                </Style>
                <Style TargetType="DatePicker" BasedOn="{StaticResource ControlBaseStyle}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="FontSize" Value="10" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource ControlBaseStyle}">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <BulletDecorator>
                                    <BulletDecorator.Bullet>
                                        <TextBlock Foreground="#57da6d" FontSize="16">+</TextBlock>
                                    </BulletDecorator.Bullet>
                                    <TextBlock Margin="4, 0, 0, 0"
                                               TextDecorations="Underline"
                                               VerticalAlignment="Center"
                                               Text="{TemplateBinding Content}"/>
                                </BulletDecorator>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Right"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Foreground" Value="DarkGray"/>
                </Style>
            </Style.Resources>

        </Style>
    </UserControl.Resources>

    <Grid Style="{StaticResource MainGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*" MinWidth="320"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">

            <!-- times, duration -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="22"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Grid.Row="0">Test</TextBox>
                <TextBox Grid.Column="1" Grid.Row="0">Test</TextBox>
                <TextBox Grid.Column="2" Grid.Row="0">Test</TextBox>
                
                <DatePicker Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                         Height="20" VerticalAlignment="Bottom"></DatePicker>
            </Grid>
            
            <!-- description -->
            <Grid Height="50">
                <TextBox>Test</TextBox>
            </Grid>

            <!-- project, client, task -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Column="0" Grid.Row="0">No project</TextBox>
                <TextBox Grid.Column="0" Grid.Row="1">No client</TextBox>
                <TextBox Grid.Column="0" Grid.Row="2">No task</TextBox>
                <Button  Grid.Column="1" Grid.Row="0">Add new project</Button>
                <Button  Grid.Column="1" Grid.Row="1">Add new client</Button>
            </Grid>
            
            <!-- tags -->
            <Grid>
                <WrapPanel Orientation="Horizontal">
                    <TextBlock>mobile</TextBlock>
                    <TextBlock>free</TextBlock>
                    <TextBox>Enter tag here</TextBox>
                </WrapPanel>
            </Grid>
            
            <!-- billable? -->
            <CheckBox>Billable</CheckBox>
            
        </StackPanel>

        
    </Grid>
</UserControl>
