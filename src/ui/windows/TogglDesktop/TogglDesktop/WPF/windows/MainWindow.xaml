<toggl:TogglWindow x:Class="TogglDesktop.WPF.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toggl="clr-namespace:TogglDesktop.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             Title="Toggl Desktop">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <toggl:TogglChromeDesignTimeConverter Title="Toggl Desktop"/>
        
        <toggl:Timer Grid.Row="0"/>
        <toggl:TimeEntryList Grid.Row="1"/>
        
    </Grid>
</toggl:TogglWindow>
