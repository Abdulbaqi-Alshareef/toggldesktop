<toggl:EntryBase x:Class="TogglDesktop.AutoCompleteControls.ProjectCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toggl="clr-namespace:TogglDesktop.AutoCompleteControls"
             mc:Ignorable="d">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <toggl:ProjectEntry Grid.Column="0"
                x:Name="noTaskProject" x:FieldModifier="private"/>
            <Rectangle Grid.Column="1" Width="30" Fill="Green" />
        </Grid>
        <StackPanel Name="TaskPanel" Background="White" Margin="30 0 0 0">
            <!-- filled programmatically -->
        </StackPanel>
    </StackPanel>
</toggl:EntryBase>
